<body class="container">
  <header>
    <h1 class="display-4">
      <%= title %></h1>
  </header>
  <div role="main">
    <p class="h6"><%- content %></p>
    <form method="post" action="/post">
      <div class="form-group">
        <p><label for="msg">翻訳したい文を入れてください:</label></p>
        <textarea name="message" rows="10" cols="200" ></textarea> 
      </div>
      <input type="submit" value="翻訳" 
        class="btn btn-primary">
    </form>
  </div>
</body>

